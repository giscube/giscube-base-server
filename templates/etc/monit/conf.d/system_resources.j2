check system {{ giscube_hostname if giscube_hostname|bool else ansible_host }}
  if loadavg (1min) > 4 then alert
  if loadavg (5min) > 2 then alert
  if memory usage > 75% then alert
  if cpu usage (user) > 70% then alert
  if cpu usage (system) > 30% then alert
  if cpu usage (wait) > 20% then alert

check filesystem rootfs with path /
  if space usage > 70% for 5 times within 15 cycles then alert
  if space usage > 80% for 5 times within 15 cycles then alert
  if space usage > 90% for 5 times within 15 cycles then alert
  if space usage > 95% for 5 times within 15 cycles then alert
  if space usage > 99% for 5 times within 15 cycles then alert
